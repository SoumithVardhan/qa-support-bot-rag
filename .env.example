# OpenAI API Key (required for embeddings and answer generation)
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Model configurations
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-3.5-turbo

# ChromaDB settings
CHROMA_PERSIST_DIR=./data/chroma_db
COLLECTION_NAME=website_docs

# Crawler - Basic Settings
MAX_PAGES=100
CRAWL_DELAY=1.0

# Crawler - Retry Configuration (Exponential Backoff)
MAX_RETRIES=3                    # Maximum retry attempts for failed requests
RETRY_BASE_DELAY=1.0             # Base delay in seconds for exponential backoff
RETRY_MAX_DELAY=60.0             # Maximum delay cap in seconds
RETRY_EXPONENTIAL_BASE=2.0       # Exponential base (delay = base_delay * 2^attempt)
RETRY_JITTER=true                # Add randomness to prevent thundering herd

# Crawler - Robots.txt Compliance
RESPECT_ROBOTS_TXT=true          # Whether to obey robots.txt rules
ROBOTS_CACHE_TTL=3600            # Cache robots.txt for 1 hour (in seconds)

# Text Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# RAG Settings
TOP_K_RESULTS=5
